<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/ivnOsc/guest-carts/:cartId/cross-sell" method="POST">
        <service class="IVN\OneStepCheckout\Api\GuestCrossSellInterface" method="getCrossSellItems"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/ivnOsc/carts/mine/cross-sell" method="POST">
        <service class="IVN\OneStepCheckout\Api\CrossSellInterface" method="getCrossSellItems"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
